<!DOCTYPE html>
<html>
<head>
  <title>Catstatus</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="nav">
    <a class="nav-link" href="/">Home</a>
    <a class="nav-link" href="<%= cats_path %>">Cats</a>
    <a class="nav-link" href="<%= entries_path %>">Entries</a>
    <% if !current_user %>
    <a class="nav-link" href="<%= new_user_registration_path %>">Sign Up</a>
    <a class="nav-link" href="<%= new_user_session_path %>">Log In</a>
    <% else %>
    <a class="nav-link" href="/">Account</a>
    <%= link_to( 'Log Out', destroy_user_session_path, { :method => :delete, :class => 'nav-link' } ) %>
    <% end %>
</nav>

<main>
    <% if flash.notice || flash.alert %>
    <section class="container">
        <% if flash.notice %>
        <div class="alert alert-success">
            <span><%= flash.notice %></span>
        </div>
        <% end %>

        <% if flash.alert %>
        <div class="alert alert-danger">
            <span><%= flash.alert %></span>
        </div>
        <% end %>
    </section>
    <% end %>

    <section class="container">
        <%= yield %>
    </section>
</main>

</body>
</html>
